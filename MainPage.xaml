<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="aplikacjatress.MainPage">

    <ScrollView>
        <StackLayout>
            <Entry x:Name="nameEntry" Placeholder="Name"/>
            <Entry x:Name="ageEntry" Placeholder="Age"/>
            <Entry x:Name="descriptionEntry" Placeholder="Description"/>
            <Button Text="Add Contact" Clicked="ContactButtonClicked"/>
            <Button Text="Show Contacts" x:Name="showContacts" Clicked="ShowContactsButtonClicked"/>
        </StackLayout>
    </ScrollView>

</ContentPage>
